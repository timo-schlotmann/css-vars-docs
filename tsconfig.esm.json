{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "node",
        "declaration": true,
        "outDir": "dist/esm",
        "rootDir": "lib",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true
    },
    "include": ["lib/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
